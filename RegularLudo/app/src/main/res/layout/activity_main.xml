<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background">
    <RelativeLayout
        android:id="@+id/toolbar"
        android:elevation="5dp"
        android:background="@color/primary"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_alignParentTop="true">
        <TextView
            android:id="@+id/menu"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:backgroundTint="#FFFFFF"
            android:background="@drawable/menu"
            android:layout_centerVertical="true"/>
        <TextView
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:shadowRadius="5"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowColor="@color/black"
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/money"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            app:lottie_rawRes="@raw/real"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_above="@id/adView"
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:contentDescription="@string/todo"
            android:src="@drawable/logo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginBottom="20dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/p1"
                android:text="1 Player"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="30sp"
                android:gravity="center"
                android:shadowRadius="5"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowColor="@color/black"
                android:layout_margin="10dp"
                android:textColor="@color/white"
                android:layout_height="150dp"
                android:background="@drawable/tile"/>
            <TextView
                android:id="@+id/p2"
                android:text="2 Player"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="30sp"
                android:gravity="center"
                android:shadowRadius="5"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowColor="@color/black"
                android:layout_margin="10dp"
                android:textColor="@color/white"
                android:layout_height="150dp"
                android:background="@drawable/tile3"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/p3"
                android:text="3 Player"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="30sp"
                android:gravity="center"
                android:shadowRadius="5"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowColor="@color/black"
                android:layout_margin="10dp"
                android:textColor="@color/white"
                android:layout_height="150dp"
                android:background="@drawable/tile2"/>
            <TextView
                android:id="@+id/p4"
                android:text="4 Player"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="30sp"
                android:gravity="center"
                android:shadowRadius="5"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowColor="@color/black"
                android:layout_margin="10dp"
                android:textColor="@color/white"
                android:layout_height="150dp"
                android:background="@drawable/tile1"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/adView"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>