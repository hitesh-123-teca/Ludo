<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/v"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:background="@drawable/wi"
        android:layout_centerHorizontal="true"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/m"
        app:cardCornerRadius="20dp"
        android:layout_below="@id/v"
        android:layout_marginTop="-36dp"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">
        <LinearLayout
            android:padding="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:background="#e45454"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/p1"
                android:padding="10dp"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:textColor="#00471D"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#00C853"
                android:background="@drawable/tile"
                android:drawablePadding="5dp"
                app:drawableStartCompat="@drawable/circle1"
                app:drawableTint="#003817" />
            <TextView
                android:id="@+id/p2"
                android:padding="10dp"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:textColor="#244E09"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#64DD17"
                android:background="@drawable/tile"
                android:drawablePadding="5dp"
                app:drawableStartCompat="@drawable/circle2"
                app:drawableTint="#1F4308" />
            <TextView
                android:id="@+id/p3"
                android:padding="10dp"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:textColor="#314200"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#AEEA00"
                android:background="@drawable/tile"
                android:drawablePadding="5dp"
                app:drawableStartCompat="@drawable/circle3"
                app:drawableTint="#364900" />
            <TextView
                android:id="@+id/p4"
                android:padding="10dp"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:textColor="#4E4200"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFD600"
                android:background="@drawable/tile"
                android:drawablePadding="5dp"
                app:drawableStartCompat="@drawable/circle4"
                app:drawableTint="#4E4200" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <Button
        android:id="@+id/close"
        android:layout_below="@id/m"
        android:text="@string/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>