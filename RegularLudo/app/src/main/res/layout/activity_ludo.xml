<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LudoActivity">
    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:visibility="gone"
            android:background="#D0000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:padding="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:padding="5dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/square">
                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <View
                        android:id="@+id/rankRed"
                        android:visibility="gone"
                        android:layout_width="22dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="-10dp"/>
                    <TextView
                        android:id="@+id/player1"
                        android:layout_marginStart="5dp"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="5dp"
                        android:layout_margin="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/dp1"
                                android:src="@drawable/user"
                                android:layout_width="48dp"
                                android:layout_height="48dp"/>
                            <TextView
                                android:visibility="gone"
                                android:textStyle="bold"
                                android:textSize="20sp"
                                android:gravity="center"
                                android:id="@+id/count1"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="#23000000"/>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="5dp"
                        android:layout_margin="2dp"
                        app:cardBackgroundColor="#4F000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <FrameLayout
                            android:id="@+id/redDice"
                            android:layout_margin="3dp"
                            android:layout_width="45dp"
                            android:layout_height="45dp"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>
            <LinearLayout
                android:padding="5dp"
                android:orientation="vertical"
                android:backgroundTint="#007d22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/square">
                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <View
                        android:id="@+id/rankGreen"
                        android:visibility="gone"
                        android:layout_width="22dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="-10dp"/>
                    <TextView
                        android:id="@+id/player2"
                        android:layout_marginStart="5dp"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="5dp"
                        android:layout_margin="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/dp2"
                                android:src="@drawable/user"
                                android:layout_width="48dp"
                                android:layout_height="48dp"/>
                            <TextView
                                android:visibility="gone"
                                android:textStyle="bold"
                                android:textSize="20sp"
                                android:gravity="center"
                                android:id="@+id/count2"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="#23000000"/>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="5dp"
                        android:layout_margin="2dp"
                        app:cardBackgroundColor="#4F000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <FrameLayout
                            android:id="@+id/greenDice"
                            android:layout_margin="3dp"
                            android:layout_width="45dp"
                            android:layout_height="45dp"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <com.makeeasy.ludo.game.LudoView
            android:id="@+id/ludoView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
        <LinearLayout
            android:padding="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <LinearLayout
                android:padding="5dp"
                android:orientation="vertical"
                android:backgroundTint="#ffd403"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/square">
                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <View
                        android:id="@+id/rankYellow"
                        android:visibility="gone"
                        android:layout_width="22dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="-10dp"/>
                    <TextView
                        android:id="@+id/player4"
                        android:layout_marginStart="5dp"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="5dp"
                        android:layout_margin="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/dp3"
                                android:src="@drawable/user"
                                android:layout_width="48dp"
                                android:layout_height="48dp"/>
                            <TextView
                                android:visibility="gone"
                                android:textStyle="bold"
                                android:textSize="20sp"
                                android:gravity="center"
                                android:id="@+id/count4"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="#23000000"/>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="5dp"
                        android:layout_margin="2dp"
                        app:cardBackgroundColor="#4F000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <FrameLayout
                            android:id="@+id/yellowDice"
                            android:layout_margin="3dp"
                            android:layout_width="45dp"
                            android:layout_height="45dp"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>
            <LinearLayout
                android:padding="5dp"
                android:orientation="vertical"
                android:backgroundTint="#0054ff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/square">
                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <View
                        android:id="@+id/rankBlue"
                        android:visibility="gone"
                        android:layout_width="22dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="-10dp"/>
                    <TextView
                        android:id="@+id/player3"
                        android:layout_marginStart="5dp"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="5dp"
                        android:layout_margin="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/dp4"
                                android:src="@drawable/user"
                                android:layout_width="48dp"
                                android:layout_height="48dp"/>
                            <TextView
                                android:visibility="gone"
                                android:textStyle="bold"
                                android:textSize="20sp"
                                android:gravity="center"
                                android:id="@+id/count3"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="#23000000"/>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="5dp"
                        android:layout_margin="2dp"
                        app:cardBackgroundColor="#4F000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <FrameLayout
                            android:id="@+id/blueDice"
                            android:layout_margin="3dp"
                            android:layout_width="45dp"
                            android:layout_height="45dp"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/red1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/r" />
        <ImageView
            android:id="@+id/red2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/r" />
        <ImageView
            android:id="@+id/red3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/r" />
        <ImageView
            android:id="@+id/red4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/r" />
        <ImageView
            android:id="@+id/green1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/g" />
        <ImageView
            android:id="@+id/green2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/g" />
        <ImageView
            android:id="@+id/green3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/g" />
        <ImageView
            android:id="@+id/green4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/g" />
        <ImageView
            android:id="@+id/blue1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/b" />
        <ImageView
            android:id="@+id/blue2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/b" />
        <ImageView
            android:id="@+id/blue3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/b" />
        <ImageView
            android:id="@+id/blue4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/b" />
        <ImageView
            android:id="@+id/yellow1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/y" />
        <ImageView
            android:id="@+id/yellow2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/y" />
        <ImageView
            android:id="@+id/yellow3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/y" />
        <ImageView
            android:id="@+id/yellow4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/y"/>
    </RelativeLayout>
</RelativeLayout>